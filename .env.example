# Public Configuration
# Hosted InstantDB (Instant Cloud) app ID
NEXT_PUBLIC_INSTANT_APP_ID=69a7badb-2401-462a-b414-bd63f6e6f897

# Server-side Instant admin SDK configuration (required for shared family token auth)
# INSTANT_APP_ID can be omitted if it matches NEXT_PUBLIC_INSTANT_APP_ID
INSTANT_APP_ID=69a7badb-2401-462a-b414-bd63f6e6f897
INSTANT_APP_ADMIN_TOKEN=
# Instant auth principals used by the app (shared kid principal + parent-elevation principal)
INSTANT_KID_AUTH_ID=family-organizer-kid
INSTANT_PARENT_AUTH_ID=family-organizer-parent
# Backward-compatible fallback for older config (used only if INSTANT_KID_AUTH_ID is not set)
# INSTANT_FAMILY_AUTH_ID=family-organizer-shared-device
# Optional explicit emails for the principals. If omitted, the app derives local emails from the IDs.
# INSTANT_KID_AUTH_EMAIL=family-organizer-kid@family-organizer.local
# INSTANT_PARENT_AUTH_EMAIL=family-organizer-parent@family-organizer.local

# Leave these unset for hosted InstantDB. Uncomment only when using a self-hosted InstantDB backend.
# NEXT_PUBLIC_INSTANT_API_URI=http://localhost:8888
# NEXT_PUBLIC_INSTANT_WEBSOCKET_URI=ws://localhost:8888/runtime/session

# Optional: public S3/MinIO endpoint for uploaded files
NEXT_PUBLIC_S3_ENDPOINT=http://localhost:9000


MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
APP_PORT=7654

# Secrets (These will be auto-generated by setup.sh)
DEVICE_ACCESS_KEY=
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
INSTANT_JWT_SECRET=
INSTANT_SESSION_SECRET=
INSTANT_DB_PASSWORD=instant_password
